{
  //主机配置
  "Host": {
    //绑定URL
    "Urls": "http://*:6220"
  },
  //Serilog日志配置
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Debug",
        "System": "Debug"
      }
    },
    "WriteTo": [
      //输入到控制台
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} <s:{SourceContext}>{NewLine}{Exception}"
        }
      }
    ]
  },
  //MKH框架本身的配置
  "Mkh": {
    //模块列表
    "Modules": {
      //模块编码
      "Admin": {
        //数据库配置
        "Db": {
          //数据库类型
          "Provider": 2,
          //数据库连接字符串
          "ConnectionString": "",
          //开启日志
          "Log": true,
          //启用代码优先模式
          "CodeFirst": true,
          //自动创建数据库
          "CreateDatabase": true,
          //自动更新列信息
          "UpdateColumn": true,
          //创建数据库后初始化数据
          "InitData": true
        },
        "Config": {
          "DefaultPassword": "123456789"
        }
      },
      //模块编码
      "Blog": {
        //数据库配置
        "Db": {
          //数据库类型
          "Provider": 2,
          //数据库连接字符串
          "ConnectionString": "",
          //开启日志
          "Log": true,
          //启用代码优先模式
          "CodeFirst": true,
          //自动创建数据库
          "CreateDatabase": true,
          //自动更新列信息
          "UpdateColumn": true,
          //创建数据库后初始化数据
          "InitData": true
        }
      }
    },
    //身份认证与授权配置项
    "Auth": {
      //启用权限验证(生产环境慎重关闭)
      "EnablePermissionVerify": false,
      //启用验证码功能
      "EnableVerifyCode": false,
      //启用检测IP地址功能
      "EnableCheckIP": true,
      //Jwt配置
      "Jwt": {
        //密钥
        "Key": "twAJ$j5##pVc5*y&",
        //发行人
        "Issuer": "http://127.0.0.1:6220",
        //消费者
        "Audience": "http://127.0.0.1:6220",
        //令牌有效期，单位分钟，(默认120)
        "Expires": 120,
        //刷新令牌有效期(单位：天，默认7)
        "RefreshTokenExpires": 7
      }
    },
    //缓存配置
    "Cache": {
      //缓存提供器，0、MemoryCache 1、Redis
      "Provider": 0,
      //Redis配置
      "Redis": {
        //默认数据库
        "DefaultDb": 0,
        //缓存键前缀
        "KeyPrefix": "",
        //链接字符串
        "ConnectionString": ""
      }
    }
  }
}
